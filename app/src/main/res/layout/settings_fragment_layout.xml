<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    style="@style/AppTheme">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="uw.buuteeq_ponyhax.app.MyAccount$PlaceholderFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"
            android:text="@string/action_settings"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/editTextTheme"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/card_layout"
            android:orientation="vertical"
            android:weightSum="1"
            style="@style/AppTheme">

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/reset_password"
                android:id="@+id/resetpass_from_settings"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.21"
                style="@style/buttonTheme" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/editTextTheme"
                android:text="@string/security_question"
                android:id="@+id/ChangeSecurityDiscription"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.21" />

            <Spinner
                android:id="@+id/spinnerSecurityQuestion_reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAlignment="center"
                android:spinnerMode="dropdown"
                android:entries="@array/question_options"
                android:layout_marginBottom="30dp"
                android:prompt="@string/security_question"
                android:background="#ffffffff" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newSecurityAnswer"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.21"
                android:hint="Type in Your New Security Answer"
                android:inputType="textImeMultiLine"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff"
                android:theme="@style/AppTheme" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>



